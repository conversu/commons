{
  "compilerOptions": {
    "target": "es2018",
    "lib": [ "es2018", "dom" ],
    "removeComments": true,
    "skipLibCheck": true,

    // Module resolution
    "module": "es2015",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "/dist",
  },
  "include": [
     "src/**/*.ts",
     "tests/**/*.ts"
  ],
  "exclude": [
    "dist/",
    "**/*.test.ts"
  ]
}